<!-- views/pages/admin.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ("../partials/head") %>
</head>

<body class="container">

  <header>
    <%- include ("../partials/header") %>
  </header>

  <main>

    <div class="jumbotron">
      <div class="container">
          <table class="table">
            <thead>
              <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>email</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>

                <% data.forEach(user => { %>
                  <tr>
                    <td><%= user.firstname %></td>
                    <td><%= user.lastname %></td>
                    <td><%= user.email %></td> 
                    <td><a href="/<%= user._id %>"><span class="fas fa-edit"></span></a></td>
                    <td><form action="/delete" method="POST"><button value="<%= user._id %>" name="id"><span class="fas fa-user-slash"></span></button></form></td>
                  </tr>
                <%})%>  
                <tr>
                    <td><a href="/add"> <span class="fas fa-user-plus"></span> Click here to add a user</a></td>
                  </tr>
            </tbody>
          </table>
        </div>      

    </div>

  </main>

  <footer>
    <%- include ("../partials/footer") %>
  </footer>

</body>

</html>