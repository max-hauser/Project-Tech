<!-- views/pages/MEET.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("../partials/head") %>
</head>

<body class="container">

    <header>
        <%- include ("../partials/header") %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>Meet</h1>

            <%- include ("../partials/filter") %>

            
            <div class="card" style="width:400px">
                <img class="card-img-top" src="/images/users/<%= data.picture %>" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title"><%= data.firstname %> <%= data.lastname %>, <small><%= data.gender %> </small></h4>
                    <p class="card-text">Hi my name is <%= data.firstname %>.<br> I'm <%= data.age %> years old and I'm looking for a <%= data.intent %> partner. <br><br>My interest are: <%= data.interest %></p>
                    <div class="btn-group">
                        <a href="#" class="btn btn-danger"><span class="far fa-times-circle"></span></a>
                        <a href="#" class="btn btn-success"><span class="fas fa-heart"></span></a>
                    </div>
                </div>
            </div>
            
    </main>

    <footer>
        <%- include ("../partials/footer") %>
    </footer>

</body>

</html>