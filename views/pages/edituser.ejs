<!-- views/pages/EDITUSER.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("../partials/head") %>
</head>

<body class="container">

    <header>
        <%- include ("../partials/header") %>
    </header>

  <main>

    <section>

        <h1>Edit <%= user.firstname %></h1>
        <form action="/edituser" method="POST" id="add_user" enctype="multipart/form-user">

          <fieldset>
            <legend>About you</legend>
          <input type="text" placeholder="firstname" id="firstname" name="firstname" value="<%= user.firstname %>">
          <input type="text" placeholder="lastname" id="lastname" name="lastname" value="<%= user.lastname %>">
          <input type="number" placeholder="age" id="age" name="age" min="18" max="50" value="<%= user.age %>">
          <input type="email" placeholder="email" id="email" name="email" value="<%= user.email %>">
          <input type="password" placeholder="password" id="password" name="password" value="<%= user.password %>">


          <h3>What's your gender?</h3>
          <div class="radio-holder">
            <input type="radio" id="male" name="gender" value="male">
            <label for="male">Male</label>
          </div>

          <div class="radio-holder">
            <input type="radio" id="female" name="gender" value="female">
            <label for="female">Female</label>
          </div>

          <h3>Upload your brightest smile</h3>
          <input type="file" accept="image/*" name="picture" placeholder="upload picture">
        </fieldset>


        <fieldset>
          <legend>What keeps you busy?</legend>
            <input type="text" placeholder="interest, interest, interest" id="interest" name="interest" value="<%= user.interest %>">

            <h3>type of relationship</h3>
            <div class="radio-holder">
              <input type="radio" id="casual" name="intent" value="casual">
              <label for="male">casual</label>
            </div>

            <div class="radio-holder">
              <input type="radio" id="serious" name="intent" value="serious">
              <label for="female">serious</label>
            </div>

            <div class="radio-holder">
              <input type="radio" id="onenightstant" name="intent" value="onenightstant">
              <label for="intent">One Night Stand</label>
            </div>

            <h3>What's your orientation?</h3>
            <div class="radio-holder">
              <input type="radio" id="male" name="orientation" value="male">
              <label for="male">Male</label>
            </div>

            <div class="radio-holder">
              <input type="radio" id="female" name="orientation" value="female">
              <label for="female">Female</label>
            </div>

            <div class="radio-holder">
              <input type="radio" id="both" name="orientation" value="both">
              <label for="both">Both</label>
            </div>
        </fieldset>

        <fieldset>
          <legend>Is your day near or far away?</legend>
          <div class="radio-holder">
            <input type="radio" id="city" name="area" value="1">
            <label for="city">city</label>
          </div>

          <div class="radio-holder">
            <input type="radio" id="country" name="area" value="2">
            <label for="country">Country</label>
          </div>

          <div class="radio-holder">
            <input type="radio" id="world" name="area" value="3">
            <label for="world">World</label>
          </div>
        </fieldset>


          <!-- <input type="submit" value="Add user"> -->
          <button value="<%= user._id%>" name="_id" user-id=" <%= user._id %>">Verstuur</button>
        </form>

        </section>

  </main>

  <footer>
      <%- include ("../partials/footer") %>
  </footer>

</body>

</html>
